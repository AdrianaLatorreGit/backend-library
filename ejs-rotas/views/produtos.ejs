<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
    <body>
        <%- include("./partials/header.ejs") %>

        <h1><%= h1 %></h1>

        <%- include("./partials/links.ejs") %>
        <h3>Listar produtos</h3>
        <div class="container">
            <% produtos.forEach(produto => { %>
            <div class="produto">
                <p><%= produto.nome %></p>
                <p><%= produto.marca %></p>
                <p><%= produto.preco %></p>
            </div>

            <% }); %>
        </div>

        <%- include("./partials/footer.ejs") %>
    </body>
</html>
